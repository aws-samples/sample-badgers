        ],
        "examples_path": "prompts",
        "max_examples": 0,
        "analysis_text": "page type and content",
        "expected_output_tokens": 1000,
        "model_selections": {
            "primary": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
