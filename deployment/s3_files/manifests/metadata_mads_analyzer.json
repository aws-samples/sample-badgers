{
    "tool": {
        "name": "analyze_metadata_mads_tool",
        "description": "Specialized tool for extracting MADS 2.1 compliant metadata from document images. ONLY use for: library and archival documents requiring MADS (Metadata Authority Description Schema) 2.1 standard compliance, authority records, bibliographic descriptions, and institutional repository processing. NOT for: general metadata, content analysis, text extraction, diagrams, or tables. If no MADS-relevant content is found, returns that no MADS metadata was detected and suggests checking with user for appropriate tool selection.",
        "inputSchema": {
            "type": "object",
            "properties": {
                "image_path": {
                    "type": "string",
                    "description": "Absolute file path to the image containing document for MADS 2.1 metadata extraction. Supports common image formats (PNG, JPG, etc.)"
                },
                "aws_profile": {
                    "type": "string",
                    "description": "Optional AWS profile name for Bedrock authentication. If not provided, uses default AWS credentials"
                },
                "session_id": {
                    "type": "string",
                    "description": "Runtime session ID"
                },
                "audit_mode": {
                    "type": "boolean",
                    "description": "When true, includes confidence scoring and human review flags in the analysis output"
                }
            },
            "required": [
                "image_path",
                "session_id"
            ]
        }
    },
    "analyzer": {
        "name": "metadata_mads_analyzer",
        "description": "Analyzes document images to extract MADS 2.1 compliant metadata",
        "prompt_analyzer_prompt_base_path": "prompts",
        "prompt_files": [
            "mads_job_role.xml",
            "mads_context.xml",
            "mads_rules.xml",
            "mads_tasks_extraction.xml",
            "mads_format.xml",
            "mads_dictionary.xml",
            "mads_user_guidelines.xml"
        ],
        "examples_path": "prompts",
        "max_examples": 0,
        "analysis_text": "MADS 2.1 metadata",
        "expected_output_tokens": 2000,
        "model_selections": {
            "primary": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
            "fallback_list": [
                "us.anthropic.claude-haiku-4-5-20251001-v1:0",
                "us.amazon.nova-premier-v1:0"
            ]
        },
        "output_extension": "xml"
    },
    "metadata": {
        "version": "1.0.0",
        "dependencies": [
            "boto3"
        ],
        "wizard_managed": true,
        "last_modified": "2025-12-22T23:50:59.083411+00:00",
        "analyzer_type": "standard"
    },
    "evaluation": {
        "likert_labels": [
            "Failed",
            "Major errors",
            "Partial success",
            "Minor issues",
            "Perfect"
        ],
        "pass_threshold": 3,
        "questions": {
            "core": [
                {
                    "id": "overall_accuracy",
                    "text": "Overall accuracy of the analysis",
                    "type": "likert"
                },
                {
                    "id": "element_identification",
                    "text": "Were all visual elements correctly identified?",
                    "type": "likert"
                },
                {
                    "id": "contextual_understanding",
                    "text": "Was the content understood within its surrounding context?",
                    "type": "likert"
                },
                {
                    "id": "issues_noted",
                    "text": "What elements were missed or incorrectly represented?",
                    "type": "text"
                }
            ],
            "tool_specific": [
                {
                    "id": "mads_field_accuracy",
                    "text": "Were MADS fields correctly extracted?",
                    "type": "likert"
                },
                {
                    "id": "schema_compliance",
                    "text": "Was the output MADS 2.1 schema compliant?",
                    "type": "likert"
                },
                {
                    "id": "authority_record_accuracy",
                    "text": "Were authority records correctly identified?",
                    "type": "likert"
                }
            ]
        }
    }
}
