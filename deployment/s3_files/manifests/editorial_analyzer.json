{
    "tool": {
        "name": "analyze_editorial_tool",
        "description": "Specialized tool for analyzing document images to identify and correct editorial issues like spacing, formatting, and text structure problems. ONLY use for: documents with spacing issues, scraped content with missing spaces, text formatting problems, concatenated words, and editorial corrections needed in extracted text. NOT for: diagrams, tables, handwriting analysis, or content extraction. If no editorial issues are found, returns that no editorial problems were detected and suggests checking with user for appropriate tool selection.",
        "inputSchema": {
            "type": "object",
            "properties": {
                "image_path": {
                    "type": "string",
                    "description": "Absolute file path to the image containing document with potential editorial issues to analyze. Supports common image formats (PNG, JPG, etc.)"
                },
                "aws_profile": {
                    "type": "string",
                    "description": "Optional AWS profile name for Bedrock authentication. If not provided, uses default AWS credentials"
                },
                "session_id": {
                    "type": "string",
                    "description": "Runtime session ID"
                },
                "audit_mode": {
                    "type": "boolean",
                    "description": "When true, includes confidence scoring and human review flags in the analysis output"
                }
            },
            "required": [
                "image_path",
                "session_id"
            ]
        }
    },
    "analyzer": {
        "name": "editorial_analyzer",
        "description": "Analyzes document images to identify and correct editorial issues like spacing and formatting",
        "enhancement_eligible": true,
        "prompt_analyzer_prompt_base_path": "prompts",
        "prompt_files": [
            "editorial_prompt.xml"
        ],
        "examples_path": "prompts",
        "max_examples": 0,
        "analysis_text": "editorial content",
        "expected_output_tokens": 3000,
        "model_selections": {
            "primary": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
            "fallback_list": [
                "us.anthropic.claude-haiku-4-5-20251001-v1:0",
                "us.amazon.nova-premier-v1:0"
            ]
        },
