{
    "tool": {
        "name": "analyze_code_block_tool",
        "description": "Specialized tool for analyzing code block images to extract and document code structure and syntax patterns. ONLY use for: code snippets, programming examples, source code screenshots, syntax highlighting examples, code documentation, algorithm implementations, and any visual representation of programming code. NOT for: diagrams, tables, handwriting, or non-code content. If no code block is found, returns that no code content was detected and suggests checking with user for appropriate tool selection.",
        "inputSchema": {
            "type": "object",
            "properties": {
                "image_path": {
                    "type": "string",
                    "description": "Absolute file path to the image containing code block to analyze. Supports common image formats (PNG, JPG, etc.)"
                },
                "aws_profile": {
                    "type": "string",
                    "description": "Optional AWS profile name for Bedrock authentication. If not provided, uses default AWS credentials"
                },
                "session_id": {
                    "type": "string",
                    "description": "Runtime session ID"
                },
                "audit_mode": {
                    "type": "boolean",
                    "description": "When true, includes confidence scoring and human review flags in the analysis output"
                }
            },
            "required": [
                "image_path",
                "session_id"
            ]
        }
    },
    "analyzer": {
        "name": "code_block_analyzer",
        "description": "Analyzes code block images to extract and document code structure and syntax",
        "prompt_analyzer_prompt_base_path": "prompts",
        "prompt_files": [
            "../shared/gestalt_perception_foundation.xml",
            "code_block_gestalt.xml",
            "code_block_job_role.xml",
            "code_block_context.xml",
            "code_block_rules.xml",
            "code_block_tasks.xml",
            "code_block_format.xml",
            "code_block_help.xml"
        ],
        "examples_path": "prompts",
        "max_examples": 3,
        "analysis_text": "code block content",
        "expected_output_tokens": 3000,
        "model_selections": {
            "primary": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
            "fallback_list": [
                "us.anthropic.claude-haiku-4-5-20251001-v1:0",
                "us.amazon.nova-premier-v1:0"
            ]
        },
        "output_extension": "xml"
    },
    "metadata": {
        "version": "1.0.0",
        "dependencies": [
            "boto3"
        ],
        "wizard_managed": true,
        "last_modified": "2025-12-22T23:50:59.079857+00:00",
        "analyzer_type": "standard"
    },
    "evaluation": {
        "likert_labels": [
            "Failed",
            "Major errors",
            "Partial success",
            "Minor issues",
            "Perfect"
        ],
        "pass_threshold": 3,
        "questions": {
            "core": [
                {
                    "id": "overall_accuracy",
                    "text": "Overall accuracy of the analysis",
                    "type": "likert"
                },
                {
                    "id": "element_identification",
                    "text": "Were all visual elements correctly identified?",
                    "type": "likert"
                },
                {
                    "id": "contextual_understanding",
                    "text": "Was the content understood within its surrounding context?",
                    "type": "likert"
                },
                {
                    "id": "issues_noted",
                    "text": "What elements were missed or incorrectly represented?",
                    "type": "text"
                }
            ],
            "tool_specific": [
                {
                    "id": "code_extraction_accuracy",
                    "text": "Was the code accurately extracted?",
                    "type": "likert"
                },
                {
                    "id": "language_identification",
                    "text": "Was the programming language correctly identified?",
                    "type": "likert"
                },
                {
                    "id": "syntax_preservation",
                    "text": "Was syntax structure and indentation preserved?",
                    "type": "likert"
                }
            ]
        }
    }
}